<div class="container-fluid">
    <br>
    <ol class="breadcrumb">
        <li>
            <a href="/">
                Dashboard
            </a>
        </li>

        <li>
            <a href="/trial/{{ trial.TrialId }}">
                Trial: {{ trial.Name }}
            </a>
        </li>
        <li>
            <a>
             tasks   
            </a>
        </li>
        <li class="active">
            Patient: {{ patient.PatientPin }}
        </li>


    </ol>

    <!-- Pattern Comparison & Finger Tapping Row -->
    <div class="row">
        <!-- Pattern Comparison Column -->
        <div class="col-md-6">
            <div id="chartCanvasDiv" class="card">
            <div>
                    <span class="pull-left">
                     <p class="h5"> Pattern Comparision Test</p>
                    </span>
                    <span class="pull-right">
                           
                           <button id="deactivate-patient" class="btn btn-primary btn-sm" disabled = "disabled">
                               View Detail
                            </button>
                    </span>
            </div>
                <canvas id="patternComparision" width="200" height="100px"></canvas>           
            </div>
        
        </div>

        <!-- Finger Tapping Column -->
        <div class="col-md-6">
            <div class="card card-info-outline">
                <div class="card-header white-background">
                    <h5>
                        Finger Tapping

                        <span class="pull-right">
                            <a href="#" class="btn btn-sm btn-primary">
                                <i class="fa fa-align-center"></i>
                                View Detail
                            </a>
                        </span>

                    </h5>
                </div>
                <div class="card-block">
                    <canvas id="fingerTapping" width="200" height="100px"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Spatial Span & Flanker Test Row -->
    <div class="row">
        <!-- Spatial Span Column -->
        <div class="col-md-6">
            <div class="card card-info-outline">
                <div class="card-header white-background">
                    <h5>
                        Spatial Span

                        <span class="pull-right">
                            <a href="#" class="btn btn-sm btn-primary" disabled="disabled">
                                <i class="fa fa-align-center"></i>
                                View Detail
                            </a>
                        </span>

                    </h5>
                </div>
                <div class="card-block">
                    <canvas id="spatialSpan" width="200" height="100px"></canvas>
                </div>
            </div>
        </div>

        <!-- Flanker Test Column -->
        <div class="col-md-6">
        <div class ="card">
                       <div>
                    <span class="pull-left">
                     <p class="h5">Flanker Test</p>
                    </span>
                    <span class="pull-right">
                           
                           <button id="flankerDetail" class="btn btn-primary btn-sm" disabled = "disabled">
                               View Detail
                            </button>
                    </span>
            </div>
                 <canvas id="flankerTest" width="200" height="100px"></canvas>
        </div>
        </div>
        
    </div>
     <div class="row">
        <div class="col-sm-12">
             <div id="chartCanvasDiv" class="card">
                <div>

                        <span class="pull-right">
                           
                            <button id="deactivate-patient" class="btn btn-primary btn-sm" disabled = "disabled">
                               View Detail
                            </button>
                        </span>
               </div>
              <br>
              <canvas id="complianceChart" width="400px" height="100px"></canvas>
            </div>
        
        </div>

    </div>





</div>

{{> remember-patient-pin}}

<script>
    window.dates = JSON.parse('{{{ datesJson }}}');
</script>
<script src="/static/script/epilepsypatient.js" defer></script>
<script src="/static/script/patterncomparision.js" defer></script>
<script src="/static/script/fingertapping.js" defer></script>
<script src="/static/script/spatialspan.js" defer></script>
<script src="/static/script/flankertest.js" defer></script>